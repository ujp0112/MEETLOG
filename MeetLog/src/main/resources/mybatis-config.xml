<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<!-- dto 패키지 개별 등록 (Company 충돌 방지) -->
		<typeAlias type="dto.AppUser" alias="DtoAppUser"/>
		<typeAlias type="dto.Branch" alias="DtoBranch"/>
		<typeAlias type="dto.BranchMenu" alias="DtoBranchMenu"/>
		<typeAlias type="dto.Company" alias="DtoCompany"/>
		<typeAlias type="dto.InventoryItem" alias="DtoInventoryItem"/>
		<typeAlias type="dto.Material" alias="DtoMaterial"/>
		<typeAlias type="dto.MenuIngredient" alias="DtoMenuIngredient"/>
		<typeAlias type="dto.MenuToggle" alias="DtoMenuToggle"/>
		<typeAlias type="dto.PurchaseOrder" alias="DtoPurchaseOrder"/>
		<typeAlias type="dto.PurchaseOrderLine" alias="DtoPurchaseOrderLine"/>
		<!-- erpDto 패키지 개별 등록 (Company 충돌 방지) -->
		<typeAlias type="erpDto.AppUser" alias="ErpAppUser"/>
		<typeAlias type="erpDto.Branch" alias="ErpBranch"/>
		<typeAlias type="erpDto.BranchMenu" alias="ErpBranchMenu"/>
		<typeAlias type="erpDto.Company" alias="ErpCompany"/>
		<typeAlias type="erpDto.InventoryItem" alias="ErpInventoryItem"/>
		<typeAlias type="erpDto.Material" alias="ErpMaterial"/>
		<typeAlias type="erpDto.MenuIngredient" alias="ErpMenuIngredient"/>
		<typeAlias type="erpDto.MenuToggle" alias="ErpMenuToggle"/>
		<typeAlias type="erpDto.Notice" alias="ErpNotice"/>
		<typeAlias type="erpDto.NoticeFile" alias="ErpNoticeFile"/>
		<typeAlias type="erpDto.NoticeImage" alias="ErpNoticeImage"/>
		<typeAlias type="erpDto.PurchaseOrder" alias="ErpPurchaseOrder"/>
		<typeAlias type="erpDto.PurchaseOrderLine" alias="ErpPurchaseOrderLine"/>
		<typeAlias type="erpDto.Promotion" alias="ErpPromotion"/>
		<!-- 패키지 자동 등록 -->
		<package name="model"/> 
	</typeAliases>

	<typeHandlers>
		<typeHandler handler="typehandler.JsonArrayTypeHandler" />
	</typeHandlers>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.mariadb.jdbc.Driver" />
				<property name="url"
					value="jdbc:mariadb://localhost:3306/meetlog?characterEncoding=UTF-8&amp;autoCommit=false" />
				<property name="username" value="root" />
				<property name="password" value="7564" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
        <mapper resource="mappers/UserMapper.xml" />
		<mapper resource="mappers/BusinessUserMapper.xml"/>
		<mapper resource="mappers/RestaurantMapper.xml" />
		<mapper resource="mappers/ReviewMapper.xml" />
		<mapper resource="mappers/ColumnMapper.xml" />
		<mapper resource="mappers/ReservationMapper.xml" />
		<mapper resource="mappers/MenuMapper.xml" />
		<mapper resource="mappers/EventMapper.xml" />
		<mapper resource="mappers/EventManagementMapper.xml" />
		<mapper resource="mappers/CourseMapper.xml" />
		<mapper resource="mappers/CommunityCourseMapper.xml" />
		<mapper resource="mappers/OfficialCourseMapper.xml" />
		<mapper resource="mappers/CourseManagementMapper.xml" />
