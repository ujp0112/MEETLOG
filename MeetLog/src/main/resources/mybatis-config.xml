<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<package name="model"/> 
	</typeAliases>

	<typeHandlers>
		<typeHandler handler="typehandler.JsonArrayTypeHandler" />
	</typeHandlers>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.mariadb.jdbc.Driver" />
				<property name="url"
					value="jdbc:mariadb://localhost:3306/meetlog?characterEncoding=UTF-8&amp;autoCommit=false" />
				<property name="username" value="root" />
				<property name="password" value="7564" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="mappers/UserMapper.xml" />
		<mapper resource="mappers/BusinessUserMapper.xml"/>
		<mapper resource="mappers/RestaurantMapper.xml" />
		<mapper resource="mappers/ReviewMapper.xml" />
		<mapper resource="mappers/ColumnMapper.xml" />
		<mapper resource="mappers/ReservationMapper.xml" />
		<mapper resource="mappers/MenuMapper.xml" />
		<mapper resource="mappers/EventMapper.xml" />
		<mapper resource="mappers/EventManagementMapper.xml" />
		<mapper resource="mappers/CourseMapper.xml" />
		<mapper resource="mappers/CommunityCourseMapper.xml" />
		<mapper resource="mappers/OfficialCourseMapper.xml" />
		<mapper resource="mappers/CourseManagementMapper.xml" />
		<mapper resource="mappers/CourseReservationManagementMapper.xml" />
		<mapper resource="mappers/CourseReviewManagementMapper.xml" />
		<mapper resource="mappers/CourseStatisticsMapper.xml" />
		<mapper resource="mappers/CouponMapper.xml" />
		<mapper resource="mappers/NewsMapper.xml" />
		<mapper resource="mappers/QnAMapper.xml" />
		<mapper resource="mappers/OperatingHourMapper.xml" />
		<mapper resource="mappers/RatingMapper.xml" />
		<mapper resource="erpMappers/AuthMapper.xml" />
		<mapper resource="erpMappers/MaterialMapper.xml" />
		<mapper resource="erpMappers/BranchMenuMapper.xml" />
		<mapper resource="erpMappers/BranchMapper.xml" />
		<mapper resource="erpMappers/OrderMapper.xml" />
		<mapper resource="mappers/CompanyMapper.xml" />
	</mappers>
</configuration>