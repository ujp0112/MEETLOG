		<mapper resource="mappers/QnAMapper.xml" />
		<mapper resource="mappers/OperatingHourMapper.xml" />
		<mapper resource="mappers/RatingMapper.xml" />
        <mapper resource="mappers/ReviewCommentMapper.xml" />
        <mapper resource="mappers/ColumnCommentMapper.xml" />
        <mapper resource="mappers/ColumnLikeMapper.xml" />
        <mapper resource="mappers/CommentLikeMapper.xml" />
        <mapper resource="mappers/ReviewStatisticsMapper.xml" />
        <mapper resource="mappers/BusinessQnAMapper.xml" />
        <mapper resource="mappers/NotificationMapper.xml" />
        <mapper resource="mappers/CompanyMapper.xml" />
