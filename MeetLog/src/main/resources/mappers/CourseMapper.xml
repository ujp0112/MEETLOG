<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.CourseMapper">

    <resultMap id="courseSearchResult" type="model.Course">
        <id property="id" column="course_id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="duration" column="duration"/>
        <result property="price" column="price"/>
        <result property="rating" column="average_rating"/>
    </resultMap>

    <select id="searchCourses" parameterType="map" resultMap="courseSearchResult">
        SELECT 
            c.course_id,
            c.title,
            c.description,
            c.duration,
            c.price,
            COALESCE(AVG(cr.rating), 0.0) AS average_rating
        FROM 
            courses c
        LEFT JOIN 
            course_reviews cr ON c.course_id = cr.course_id
        WHERE 
            c.status = 'ACTIVE'
            <if test="area != null and area != ''">
                AND c.area = #{area}
            </if>
            <if test="budget != null and budget > 0">
                AND c.price &lt;= #{budget}
            </if>
        GROUP BY
            c.course_id, c.title, c.description, c.duration, c.price
        ORDER BY 
            c.created_at DESC
    </select>

</mapper>