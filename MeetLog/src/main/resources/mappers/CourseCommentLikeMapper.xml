<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CourseCommentLikeDAO">

    <!-- 특정 사용자가 특정 코스 댓글에 좋아요를 눌렀는지 확인 -->
    <select id="checkLike" parameterType="map" resultType="Integer">
        SELECT id
        FROM course_comment_likes
        WHERE comment_id = #{commentId} AND user_id = #{userId}
    </select>

    <!-- 코스 댓글 좋아요 추가 -->
    <insert id="addLike" parameterType="map">
        INSERT INTO course_comment_likes (comment_id, user_id)
        VALUES (#{commentId}, #{userId})
    </insert>

    <!-- 코스 댓글 좋아요 제거 -->
    <delete id="removeLike" parameterType="map">
        DELETE FROM course_comment_likes
        WHERE comment_id = #{commentId} AND user_id = #{userId}
    </delete>

</mapper>