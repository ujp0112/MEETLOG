<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.EventManagementMapper">
    <resultMap id="adminEventResult" type="model.AdminEvent">
        <id property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="summary" column="SUMMARY"/>
        <result property="content" column="CONTENT"/>
        <result property="image" column="IMAGE"/>
        <result property="startDate" column="START_DATE"/>
        <result property="endDate" column="END_DATE"/>
    </resultMap>

    <select id="selectAllEventsForAdmin" resultMap="adminEventResult">
        SELECT * FROM events ORDER BY ID DESC
    </select>

    <insert id="insertEvent" parameterType="model.AdminEvent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO events (TITLE, SUMMARY, CONTENT, IMAGE, START_DATE, END_DATE)
        VALUES (#{title}, #{summary}, #{content}, #{image}, #{startDate}, #{endDate})
    </insert>
    
    <update id="updateEvent" parameterType="model.AdminEvent">
        UPDATE events
        SET
            TITLE = #{title},
            SUMMARY = #{summary},
            CONTENT = #{content},
            IMAGE = #{image},
            START_DATE = #{startDate},
            END_DATE = #{endDate}
        WHERE ID = #{id}
    </update>

    <delete id="deleteEvent" parameterType="int">
        DELETE FROM events WHERE ID = #{id}
    </delete>
</mapper>