    <!-- Q&A Ïã§ÏãúÍ∞Ñ Í¥ÄÎ¶¨ ÏãúÏä§ÌÖú JavaScript -->
    <script>
        // Ï†ÑÏó≠ Î≥ÄÏàò
        let qnaUpdateInterval;
        const contextPath = '${pageContext.request.contextPath}';

        // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú Ï¥àÍ∏∞Ìôî
        document.addEventListener('DOMContentLoaded', function() {
            initRealtimeQnA();
            setupEventListeners();
            startQnAUpdates();
        });

        /**
         * Ïã§ÏãúÍ∞Ñ Q&A ÏãúÏä§ÌÖú Ï¥àÍ∏∞Ìôî
         */
        function initRealtimeQnA() {
            console.log('Ïã§ÏãúÍ∞Ñ Q&A ÏãúÏä§ÌÖúÏù¥ ÏãúÏûëÎêòÏóàÏäµÎãàÎã§.');
            showNotification('Ïã§ÏãúÍ∞Ñ Q&A Î™®ÎãàÌÑ∞ÎßÅÏù¥ ÌôúÏÑ±ÌôîÎêòÏóàÏäµÎãàÎã§. üìû');
        }

        /**
         * Ïã§ÏãúÍ∞Ñ ÏóÖÎç∞Ïù¥Ìä∏ ÏãúÏûë
         */
        function startQnAUpdates() {
            // 30Ï¥àÎßàÎã§ ÏÉàÎ°úÏö¥ Q&A ÌôïÏù∏
            qnaUpdateInterval = setInterval(function() {
                checkForNewQnA();
            }, 30000);
        }

        /**
         * ÏÉàÎ°úÏö¥ Q&A ÌôïÏù∏
         */
        function checkForNewQnA() {
            fetch(contextPath + '/business/qna/check-new', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.hasNew) {
                    showNotification(`ÏÉàÎ°úÏö¥ ÏßàÎ¨∏ ${data.count}Í∞úÍ∞Ä Îì±Î°ùÎêòÏóàÏäµÎãàÎã§! üîî`);
                    refreshQnAList();
                }
            })
            .catch(error => {
                console.log('Q&A ÏóÖÎç∞Ïù¥Ìä∏ ÌôïÏù∏ Ïã§Ìå®:', error);
            });
        }

        /**
         * Q&A ÎãµÎ≥Ä Ï†úÏ∂ú (AJAX)
         */
        function submitAnswer(qnaId) {
            const answerText = document.getElementById(`answer_${qnaId}`).value;

            if (answerText.trim() === '') {
                showErrorNotification('ÎãµÎ≥Ä ÎÇ¥Ïö©ÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }

            // Î≤ÑÌäº ÏÉÅÌÉú Î≥ÄÍ≤Ω
            const button = document.querySelector(`#answerForm_${qnaId} button`);
            toggleButtonLoading(button, true);

            fetch(contextPath + '/business/qna/reply', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    qnaId: qnaId,
                    answer: answerText
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessNotification('ÎãµÎ≥ÄÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Îì±Î°ùÎêòÏóàÏäµÎãàÎã§! ‚úÖ');
                    updateQnAItem(qnaId, data.qna);
                } else {
                    showErrorNotification(data.message || 'ÎãµÎ≥Ä Îì±Î°ùÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
                }
            })
            .catch(error => {
                console.error('ÎãµÎ≥Ä Îì±Î°ù Ïò§Î•ò:', error);
                showErrorNotification('ÎãµÎ≥Ä Îì±Î°ù Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
            })
            .finally(() => {
                toggleButtonLoading(button, false);
            });
        }

        /**
         * Q&A Ï¢ÖÎ£å (AJAX)
         */
        function closeQnA(qnaId) {
            if (!confirm('Ïù¥ Q&AÎ•º Ï¢ÖÎ£åÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
                return;
            }

            fetch(contextPath + '/business/qna/close', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ qnaId: qnaId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessNotification('Q&AÍ∞Ä Ï¢ÖÎ£åÎêòÏóàÏäµÎãàÎã§.');
                    updateQnAStatus(qnaId, 'CLOSED');
                } else {
                    showErrorNotification(data.message || 'Q&A Ï¢ÖÎ£åÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
                }
            })
            .catch(error => {
                console.error('Q&A Ï¢ÖÎ£å Ïò§Î•ò:', error);
                showErrorNotification('Q&A Ï¢ÖÎ£å Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
            });
        }

        /**
         * ÎãµÎ≥Ä ÏàòÏ†ï
         */
        function editAnswer(qnaId) {
            // TODO: ÎãµÎ≥Ä ÏàòÏ†ï Î™®Îã¨ ÎòêÎäî Ïù∏ÎùºÏù∏ ÏóêÎîîÌÑ∞ Íµ¨ÌòÑ
            showNotification('ÎãµÎ≥Ä ÏàòÏ†ï Í∏∞Îä•ÏùÑ Ï§ÄÎπÑ Ï§ëÏûÖÎãàÎã§.');
        }

        /**
         * ÏÉÅÌÉúÎ≥Ñ ÌïÑÌÑ∞ÎßÅ
         */
        function filterByStatus(status) {
            const qnaItems = document.querySelectorAll('.qna-item');
            qnaItems.forEach(item => {
                if (status === 'all' || item.dataset.status === status) {
                    item.style.display = 'block';
                    item.classList.add('fade-in');
                } else {
                    item.style.display = 'none';
                    item.classList.remove('fade-in');
                }
            });

            // ÌÜµÍ≥Ñ ÏóÖÎç∞Ïù¥Ìä∏ Ïï†ÎãàÎ©îÏù¥ÏÖò
            updateStatistics();
        }

        /**
         * ÌÜµÍ≥Ñ ÏóÖÎç∞Ïù¥Ìä∏
         */
        function updateStatistics() {
            const totalItems = document.querySelectorAll('.qna-item').length;
            const visibleItems = document.querySelectorAll('.qna-item[style*="block"], .qna-item:not([style*="none"])').length;

            // ÌÜµÍ≥Ñ ÌëúÏãú (Ïã§Ï†ú Íµ¨ÌòÑ Ïãú Ï∂îÍ∞Ä)
            console.log(`Ï†ÑÏ≤¥: ${totalItems}, ÌëúÏãú: ${visibleItems}`);
        }

        /**
         * Q&A Î™©Î°ù ÏÉàÎ°úÍ≥†Ïπ®
         */
        function refreshQnAList() {
            showLoading();

            fetch(contextPath + '/business/qna/list', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateQnAListUI(data.qnaList);
                    showSuccessNotification('Î™©Î°ùÏù¥ ÏóÖÎç∞Ïù¥Ìä∏ÎêòÏóàÏäµÎãàÎã§.');
                } else {
                    showErrorNotification('Î™©Î°ù ÏÉàÎ°úÍ≥†Ïπ®Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
                }
            })
            .catch(error => {
                console.error('Î™©Î°ù ÏÉàÎ°úÍ≥†Ïπ® Ïò§Î•ò:', error);
                showErrorNotification('Î™©Î°ù ÏÉàÎ°úÍ≥†Ïπ® Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
            })
            .finally(() => {
                hideLoading();
            });
        }

        /**
         * Q&A ÏïÑÏù¥ÌÖú ÏóÖÎç∞Ïù¥Ìä∏
         */
        function updateQnAItem(qnaId, qnaData) {
            const qnaElement = document.querySelector(`[data-qna-id="${qnaId}"]`);
            if (qnaElement) {
                // ÎãµÎ≥Ä ÏÑπÏÖò Ï∂îÍ∞Ä/ÏóÖÎç∞Ïù¥Ìä∏
                const answerSection = createAnswerSection(qnaData);
                const answerForm = qnaElement.querySelector(`#answerForm_${qnaId}`);

                if (answerForm) {
                    answerForm.innerHTML = answerSection;
                }

                // ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏
                updateQnAStatus(qnaId, qnaData.status);
            }
        }

        /**
         * Q&A ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏
         */
        function updateQnAStatus(qnaId, newStatus) {
            const qnaElement = document.querySelector(`[data-qna-id="${qnaId}"]`);
            if (qnaElement) {
                qnaElement.dataset.status = newStatus;

                // ÏÉÅÌÉú Î∞∞ÏßÄ ÏóÖÎç∞Ïù¥Ìä∏
                const statusBadge = qnaElement.querySelector('.status-badge');
                if (statusBadge) {
                    updateStatusBadge(statusBadge, newStatus);
                }
            }
        }

        /**
         * ÏÉÅÌÉú Î∞∞ÏßÄ ÏóÖÎç∞Ïù¥Ìä∏
         */
        function updateStatusBadge(badge, status) {
            const statusConfig = {
                'PENDING': { class: 'status-pending', text: 'ÎãµÎ≥Ä ÎåÄÍ∏∞' },
                'ANSWERED': { class: 'status-answered', text: 'ÎãµÎ≥Ä ÏôÑÎ£å' },
                'CLOSED': { class: 'status-closed', text: 'Ï¢ÖÎ£å' }
            };

            const config = statusConfig[status] || statusConfig['PENDING'];
            badge.className = `px-3 py-1 rounded-full text-xs font-semibold ${config.class}`;
            badge.textContent = config.text;
        }

        /**
         * ÎãµÎ≥Ä ÏÑπÏÖò ÏÉùÏÑ±
         */
        function createAnswerSection(qnaData) {
            if (qnaData.status === 'ANSWERED' && qnaData.answer) {
                return `
                    <div class="mb-4">
                        <h4 class="font-semibold text-slate-700 mb-2">ÎãµÎ≥Ä</h4>
                        <p class="text-slate-600 bg-green-50 p-4 rounded-lg">${qnaData.answer}</p>
                        <p class="text-slate-500 text-sm mt-2">
                            ÎãµÎ≥ÄÏùº: ${new Date(qnaData.answeredAt).toLocaleString()}
                        </p>
                    </div>
                    <div class="flex space-x-3">
                        <button onclick="editAnswer(${qnaData.id})" class="btn-secondary text-white px-4 py-2 rounded-lg text-sm">
                            ÎãµÎ≥Ä ÏàòÏ†ï
                        </button>
                        <button onclick="closeQnA(${qnaData.id})" class="btn-warning text-white px-4 py-2 rounded-lg text-sm">
                            Ï¢ÖÎ£å
                        </button>
                    </div>
                `;
            }
            return '<p class="text-slate-500 text-center">ÎãµÎ≥ÄÏù¥ Îì±Î°ùÎêòÏóàÏäµÎãàÎã§.</p>';
        }

        /**
         * ÏïåÎ¶º ÌëúÏãú
         */
