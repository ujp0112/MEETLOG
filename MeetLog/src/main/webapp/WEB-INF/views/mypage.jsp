    <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const telegramCard = document.getElementById('telegram-card');
        const telegramStatus = document.getElementById('telegram-status');
        const connectBtn = document.getElementById('telegram-connect-btn');
        const disconnectBtn = document.getElementById('telegram-disconnect-btn');
        const modal = document.getElementById('telegram-modal');
        const closeModal = document.getElementById('close-modal');
        const telegramLink = document.getElementById('telegram-link');
        const qrCodeDiv = document.getElementById('qr-code');

        let currentState = null;

        // Ïó∞Í≤∞ ÏÉÅÌÉú ÌôïÏù∏
        function checkTelegramStatus() {
            fetch('${pageContext.request.contextPath}/telegram/link')
                .then(res => res.json())
                .then(data => {
                    if (data.connected) {
                        telegramStatus.textContent = 'Ïó∞Í≤∞Îê® ‚úì';
                        telegramStatus.classList.remove('text-slate-600');
                        telegramStatus.classList.add('text-green-600');
                        connectBtn.classList.add('hidden');
                        disconnectBtn.classList.remove('hidden');
                        currentState = 'connected';
                    } else {
                        telegramStatus.textContent = 'Ïó∞Í≤∞ ÏïàÎê®';
                        telegramStatus.classList.remove('text-green-600');
                        telegramStatus.classList.add('text-slate-600');
                        connectBtn.classList.remove('hidden');
                        disconnectBtn.classList.add('hidden');
                        currentState = 'disconnected';
                    }
                })
                .catch(err => {
                    console.error('ÏÉÅÌÉú ÌôïÏù∏ Ïã§Ìå®:', err);
                    telegramStatus.textContent = 'ÏÉÅÌÉú ÌôïÏù∏ Ïã§Ìå®';
                });
        }

        // Ïó∞Í≤∞ÌïòÍ∏∞ Î≤ÑÌäº ÌÅ¥Î¶≠
        connectBtn.addEventListener('click', function(e) {
            e.stopPropagation();

            fetch('${pageContext.request.contextPath}/telegram/link', { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        // QR ÏΩîÎìú ÏÉùÏÑ±
                        qrCodeDiv.innerHTML = '';
                        new QRCode(qrCodeDiv, {
                            text: data.deepLink,
                            width: 200,
                            height: 200
                        });

                        // ÎßÅÌÅ¨ ÏÑ§Ï†ï
                        telegramLink.href = data.deepLink;

                        // Î™®Îã¨ ÌëúÏãú
                        modal.classList.remove('hidden');
                    } else {
                        alert('Ïó∞Í≤∞ ÌÜ†ÌÅ∞ Î∞úÍ∏â Ïã§Ìå®: ' + (data.error || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•ò'));
                    }
                })
                .catch(err => {
                    console.error('Ïó∞Í≤∞ Ïã§Ìå®:', err);
                    alert('Ïó∞Í≤∞ ÏöîÏ≤≠ Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
                });
        });

        // Ïó∞Í≤∞ Ìï¥Ï†ú Î≤ÑÌäº ÌÅ¥Î¶≠
        disconnectBtn.addEventListener('click', function(e) {
            e.stopPropagation();

            if (!confirm('ÌÖîÎ†àÍ∑∏Îû® ÏïåÎ¶º Ïó∞Í≤∞ÏùÑ Ìï¥Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
                return;
            }

            fetch('${pageContext.request.contextPath}/telegram/link', { method: 'DELETE' })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert('Ïó∞Í≤∞Ïù¥ Ìï¥Ï†úÎêòÏóàÏäµÎãàÎã§.');
                        checkTelegramStatus();
                    } else {
                        alert('Ïó∞Í≤∞ Ìï¥Ï†ú Ïã§Ìå®: ' + (data.error || data.message || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•ò'));
                    }
                })
                .catch(err => {
                    console.error('Ïó∞Í≤∞ Ìï¥Ï†ú Ïã§Ìå®:', err);
                    alert('Ïó∞Í≤∞ Ìï¥Ï†ú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
                });
        });

        // Î™®Îã¨ Îã´Í∏∞
        closeModal.addEventListener('click', function() {
            modal.classList.add('hidden');
            checkTelegramStatus(); // ÏÉÅÌÉú Îã§Ïãú ÌôïÏù∏
        });

        // Î™®Îã¨ Î∞∞Í≤Ω ÌÅ¥Î¶≠ Ïãú Îã´Í∏∞
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.classList.add('hidden');
                checkTelegramStatus();
            }
        });

        // Ï¥àÍ∏∞ ÏÉÅÌÉú ÌôïÏù∏
        checkTelegramStatus();
    });
