<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CouponUsageLogMapper">

    <resultMap id="couponUsageLogResultMap" type="model.CouponUsageLog" autoMapping="true">
        <id property="id" column="id" />
        <result property="userCouponId" column="user_coupon_id" />
        <result property="reservationId" column="reservation_id" />
        <result property="action" column="action" />
        <result property="discountAmount" column="discount_amount" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <!-- 쿠폰 사용 로그 추가 -->
    <insert id="insertLog" parameterType="model.CouponUsageLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO coupon_usage_logs (user_coupon_id, reservation_id, action, discount_amount, created_at)
        VALUES (#{userCouponId}, #{reservationId}, #{action}, #{discountAmount}, NOW())
    </insert>

    <!-- 특정 사용자 쿠폰의 로그 조회 -->
    <select id="findByUserCouponId" parameterType="int" resultMap="couponUsageLogResultMap">
        SELECT * FROM coupon_usage_logs
        WHERE user_coupon_id = #{userCouponId}
        ORDER BY created_at DESC
    </select>

    <!-- 특정 예약의 쿠폰 사용 로그 조회 -->
    <select id="findByReservationId" parameterType="int" resultMap="couponUsageLogResultMap">
        SELECT * FROM coupon_usage_logs
        WHERE reservation_id = #{reservationId}
        ORDER BY created_at DESC
    </select>

</mapper>
